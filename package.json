{
	"name": "nest-domain",
	"version": "1.0.1",
	"description": "Backend for admin panel and future site",
	"keywords": [],
	"author": "Gavrilov S Kirill",
	"license": "MIT",
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"migration:generate": "ts-node node_modules/.bin/sequelize migration:generate",
		"db:migrate": "ts-node node_modules/.bin/sequelize db:migrate",
		"db:migrate:undo": "ts-node node_modules/.bin/sequelize db:migrate:undo",
		"db:drop": "ts-node node_modules/.bin/sequelize db:drop",
		"db:create": "ts-node node_modules/.bin/sequelize db:create",
		"db:seed-dev": "ts-node node_modules/.bin/sequelize db:seed:all",
		"db:seed-prod": "ts-node node_modules/.bin/sequelize db:seed:all --seeders-path db/seeders-prod",
		"db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed-dev && npm run db:seed-prod",
		"prestart:production": "rimraf dist && npm run build",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest --config ./test/jest-e2e.json",
		"wr-migrate": "ts-node -r tsconfig-paths/register src/services/migration-workers/index.ts",
		"wr-migrate:dev": "nodemon --config nodemon-wr-migration.json",
		"site-api": "ts-node -r tsconfig-paths/register src/services/site-api/index.ts",
		"site-api:dev": "nodemon --config nodemon-site-api.json",
		"site-api:production": "node dist/src/services/site-api/index.js",
		"site-api:prod": "npm run db:migrate && npm run site-api",
		"admin-api": "ts-node -r tsconfig-paths/register src/services/admin-api/index.ts",
		"admin-api:dev": "nodemon --config nodemon-admin-api.json",
		"admin-api:production": "node dist/src/services/admin-api/index.js",
		"admin-api:prod": "npm run db:migrate && npm run admin-api"
	},
	"dependencies": {
		"@nestjs/common": "^7.0.1",
		"@nestjs/core": "^7.0.1",
		"@nestjs/mongoose": "^7.2.0",
		"@nestjs/passport": "^7.0.0",
		"@nestjs/platform-express": "^7.0.1",
		"@nestjs/schedule": "^0.4.1",
		"@nestjs/swagger": "^4.4.0",
		"axios": "^0.21.0",
		"bcrypt": "^4.0.1",
		"big-js": "^3.1.3",
		"bignumber.js": "^9.0.1",
		"class-transformer": "^0.2.3",
		"class-validator": "^0.11.0",
		"dotenv": "^8.2.0",
		"jayson": "^3.3.4",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.20",
		"moment": "^2.29.1",
		"mongoose": "^5.11.5",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pg": "^7.18.2",
		"randomstring": "^1.1.5",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.5.4",
		"sequelize": "^5.21.5",
		"sequelize-cli": "^5.5.1",
		"sequelize-typescript": "^1.1.0",
		"short-id": "^0.1.0-1",
		"short-uuid": "^4.1.0",
		"swagger-ui-express": "^4.1.3",
		"url": "^0.11.0",
		"web3": "^1.3.0"
	},
	"devDependencies": {
		"@nestjs/testing": "^7.0.1",
		"@types/bcrypt": "^3.0.0",
		"@types/express": "^4.17.3",
		"@types/jest": "^25.1.4",
		"@types/jsonwebtoken": "^8.3.8",
		"@types/node": "^13.9.1",
		"@types/passport": "^1.0.3",
		"@types/passport-jwt": "^3.0.3",
		"@types/sequelize": "^4.28.8",
		"@types/supertest": "^2.0.8",
		"@types/validator": "10.11.3",
		"jest": "^25.1.0",
		"nodemon": "^2.0.2",
		"prettier": "^1.19.1",
		"supertest": "^4.0.2",
		"ts-jest": "^25.2.1",
		"ts-node": "^8.6.2",
		"tsconfig-paths": "^3.9.0",
		"tslint": "6.1.0",
		"typescript": "^3.8.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
